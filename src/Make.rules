
define get-config
$(shell git config --local --get "fwupdate.$(1)")
endef

%.abixml : %.so
	$(ABIDW) --headers-dir $(TOP)/linux/include/ --out-file $@ $^
	@sed -i -s 's,$(TOPDIR)/,,g' $@

%.abicheck : %.so
	$(ABIDIFF) \
		--suppr abignore \
		--headers-dir2 $(TOP)/linux/include/ \
		$(patsubst %.so,%.abixml,$<) \
		$<
